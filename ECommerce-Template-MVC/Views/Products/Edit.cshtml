@model ECommerce_Template_MVC.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantiteEnStock" class="control-label"></label>
                <input asp-for="QuantiteEnStock" class="form-control" />
                <span asp-validation-for="QuantiteEnStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Image 1</label>
                <input type="file" name="ImageFiles" class="form-control-file image-input" />
            </div>

            <div class="form-group">
                <label>Image 2</label>
                <input type="file" name="ImageFiles" class="form-control-file image-input" />
            </div>

            <div class="form-group">
                <label>Image 3</label>
                <input type="file" name="ImageFiles" class="form-control-file image-input" />
            </div>

            <div class="form-group">
                <label>Image 4</label>
                <input type="file" name="ImageFiles" class="form-control-file image-input" />
            </div>

            <div class="form-group">
                <label>Image 5</label>
                <input type="file" name="ImageFiles" class="form-control-file image-input" />
            </div>
            @foreach (var image in Model.Images)
            {
                <div class="image-container">
                    <label for="@image.Id">
                        <img src="@image.ImageUrl" alt="Imagen del producto" width="100" />
                    </label>
                    <input type="file" id="@image.Id" name="ImageFiles" class="image-input" style="display:none;" />
                </div>
            }
            <div id="image-preview" class="mt-3"></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/ImagesPreview.js"></script>
}
