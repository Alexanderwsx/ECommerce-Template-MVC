@model ShoppingCart

<form method="post" asp-action="AddToCart">
    <input hidden asp-for="ProductId" />
    <div class="container m-10 pt-5">
        <div class="row flex-column flex-sm-row justify-content-center text-center align-content-center">

            <div class="col-12 col-md-6 mb-4 ">
                <img src="@Model.Product.Images" width=50% alt="Produit">
            </div>

            <div class="col-12 col-md-6 text-center">
                <h3>
                    @Model.Product.Name
                </h3>
                <p>Marque: @Model.Product.Brand</p>
                <hr />
                <h4>@Model.Product.Price.ToString("c")</h4>
                <div class="row pl-2">
                    <div class="form-control col-8">
                        <select asp-for="Count" class="form-control">
                            @for (var i = 1; i <= Math.Min(Model.Product.QuantiteEnStock, 20); i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <button class="addToCart" data-productid="@Model.ProductId">Agregar al carrito</button>

                </div>
            </div>
        </div>

        <div class="col-12 mb-4 mt-4">
            <h3> À propos de cet article </h3>
            <p>@Html.Raw(Model.Product.Description)</p>
        </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/addToLocalCart.js"></script>
